<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Material">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#4b2e83</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextStyle" parent="@style/AppTheme">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#4b2e83</item>
        <item name="android:width">180dp</item>
        <item name="android:height">80dp</item>
    </style>

    <style name="TextStyle.Label" parent="@style/TextStyle">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextStyle.Label.Gold" parent="@style/TextStyle.Label">
        <item name="android:background">#b7a57a</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/MediaButton">
        <item name="android:textSize">22sp</item>
    </style>
</resources>
